// launch.json
{
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Run",           // launch名字
            "type": "cppdbg",                  // Debuger类型
            "request": "launch",               // 设为独立运行
            
            "preLaunchTask": "Build",          // 前置任务。可以调用${defaultBuildTask}

            "program": "${workspaceFolder}/src/myprogram.exe",   // 可执行文件
            "args": [],                                          // 参数
            "environment": [],                                   // 运行时环境变量设置
            "cwd": "${workspaceFolder}/src/",                    // 工作目录
            "stopAtEntry": false,                                // 设置断点在launch完成时
            "externalConsole": false,                            // 设置启用外部控制台

            
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",  // 设置调试器
            "MIMode": "gdb",                                        // 设置调试器模式
            "setupCommands": [                                      // 调试器设置
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}